      <div>
            <label>Nom de la Region:</label>
            <input type="text" class="form-control col-md-10"  name="categorieNom" value ="<%= categorieNom %>">
        </div>
          
        <div class="form-group">
          <input type="hidden" name="categorieID" value="<%= categorieID %>" >
          <input type="submit" name="save" value="Sauver"><br>
        </div>
        <h3 style="color: red;"> <%= message %></h3>
    </form>

  </div>
  <% } %>    


