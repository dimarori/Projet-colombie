<body >
  <%- include('partials/menu'); -%>
  <% if(update) { %>
    <div>
        <h1 id="titre1">Modifier Region</h1> </br>
        <form action="/categorie/Update" method="POST" id="cat" name="cat" >
          <div>
                <label>Nom de la Region:</label>
                <input type="text" class="form-control col-md-10"  name="categorieNom" value="<%= categorieNom %>">
            </div>

                <br />
            <div class="form-group">
              <button class="btn btn-primary">Modifier</button>
            </div>
